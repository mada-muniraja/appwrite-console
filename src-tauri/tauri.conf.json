{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Appwrite Console",
  "version": "0.1.0",
  "identifier": "com.rajatechlabs.appwrite.console",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "backgroundColor": "#19191D",
        "label": "main",
        "fullscreen": false,
        "title": "Appwrite Console",
        "width": 800,
        "height": 600,
        "theme": "Dark",
        "center": true,
        "alwaysOnTop": false,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "android": {
      "minSdkVersion": 24
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}